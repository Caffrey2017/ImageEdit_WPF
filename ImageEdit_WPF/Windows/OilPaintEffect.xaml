<Window x:Class="ImageEdit_WPF.Windows.OilPaintEffect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Oil paint effect" Height="160" Width="250" Background="WhiteSmoke" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0">
            <TextBlock Margin="10">Kernel size:</TextBlock>
            <ComboBox Margin="5" Name="cmbKernelSize">
                <ComboBoxItem>3</ComboBoxItem>
                <ComboBoxItem>5</ComboBoxItem>
                <ComboBoxItem>9</ComboBoxItem>
                <ComboBoxItem>11</ComboBoxItem>
                <ComboBoxItem>15</ComboBoxItem>
            </ComboBox>
        </WrapPanel>
        <WrapPanel Grid.Row="1">
            <TextBlock Margin="10">Intensity levels:</TextBlock>
            <TextBox Name="txbIntensityLevels" Width="40" Height="25"></TextBox>
        </WrapPanel>
        <StackPanel Grid.Row="2" Margin="10" HorizontalAlignment="Center">
            <Button Name="ok" Padding="30,2,30,2" Click="Ok_OnClick">OK</Button>
        </StackPanel>
    </Grid>
</Window>
