<Window x:Class="ImageEdit_WPF.Windows.Histogram"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Histogram" Height="320" Width="410" Background="WhiteSmoke" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10,0,0,0">
            <TextBlock>Channel:</TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="70,0,0,10">
            <RadioButton Name="gray" Checked="gray_Checked">Luminosity (Gray)</RadioButton>
            <RadioButton Name="red" Checked="red_Checked">Red</RadioButton>
            <RadioButton Name="green" Checked="green_Checked">Green</RadioButton>
            <RadioButton Name="blue" Checked="blue_Checked">Blue</RadioButton>
        </StackPanel>
        <GroupBox Name="groupBox" Grid.Row="1" Grid.Column="0" Header="Luminosity (Gray)" Width="380" Height="200">
            <Border BorderThickness="1" BorderBrush="Black" Background="White" Margin="10">
                <Polygon Name="polygon" Points="{Binding HistogramPoints}" Stretch="Fill" Fill="Black"/>
            </Border>
        </GroupBox>
        <Label Grid.Row="1" Grid.Column="0" Margin="363,180,10,0">0</Label>
        <Label Grid.Row="1" Grid.Column="0" Margin="10,180,350,0">255</Label>
    </Grid>
</Window>
