<Window x:Class="ImageEdit_WPF.Threshold"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Threshold" Height="120" Width="200" Background="WhiteSmoke">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <WrapPanel Grid.Row="0">
            <TextBlock Margin="10">Threshold:</TextBlock>
            <TextBox Name="textboxThreshold" Width="40" Height="25"></TextBox>
        </WrapPanel>
        <StackPanel Grid.Row="1" Margin="10" HorizontalAlignment="Center">
            <Button Name="ok" Padding="30,2,30,2" Click="ok_Click">OK</Button>
        </StackPanel>
    </Grid>
</Window>