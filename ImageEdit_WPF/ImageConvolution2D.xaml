<Window x:Class="ImageEdit_WPF.ImageConvolution2D"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Convolution (2D)" Height="260" Width="250" Background="WhiteSmoke" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="15,10,0,0">
            <TextBlock>Mask:</TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="70,10,0,10">
            <RadioButton Name="sobel" Checked="sobel_Checked">Sobel</RadioButton>
            <RadioButton Name="gaussianBlur" Checked="gaussianBlur_Checked">Gaussian Blur</RadioButton>
            <RadioButton Name="sharpen" Checked="sharpen_Checked">Sharpen</RadioButton>
        </StackPanel>
        <GroupBox Name="groupBox" Grid.Row="1" Grid.Column="0" Header="Sobel (X Axis)" Width="105" Height="90" HorizontalAlignment="Left" Margin="10">
            <WrapPanel>
                <TextBox Name="tbx1" Width="30"></TextBox>
                <TextBox Name="tbx2" Width="30"></TextBox>
                <TextBox Name="tbx3" Width="30"></TextBox>
                <TextBox Name="tbx4" Width="30"></TextBox>
                <TextBox Name="tbx5" Width="30"></TextBox>
                <TextBox Name="tbx6" Width="30"></TextBox>
                <TextBox Name="tbx7" Width="30"></TextBox>
                <TextBox Name="tbx8" Width="30"></TextBox>
                <TextBox Name="tbx9" Width="30"></TextBox>
            </WrapPanel>
        </GroupBox>
        <GroupBox Name="groupBox2" Grid.Row="1" Grid.Column="2" Header="Sobel (Y Axis)" Width="105" Height="90" HorizontalAlignment="Right" Margin="10">
            <WrapPanel>
                <TextBox Name="tby1" Width="30"></TextBox>
                <TextBox Name="tby2" Width="30"></TextBox>
                <TextBox Name="tby3" Width="30"></TextBox>
                <TextBox Name="tby4" Width="30"></TextBox>
                <TextBox Name="tby5" Width="30"></TextBox>
                <TextBox Name="tby6" Width="30"></TextBox>
                <TextBox Name="tby7" Width="30"></TextBox>
                <TextBox Name="tby8" Width="30"></TextBox>
                <TextBox Name="tby9" Width="30"></TextBox>
            </WrapPanel>
        </GroupBox>
        <Button Name="ok" Grid.Row="2" Grid.Column="0" Margin="80,10,80,10" Click="ok_Click">OK</Button>
    </Grid>
</Window>
