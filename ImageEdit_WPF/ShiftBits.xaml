<Window x:Class="ImageEdit_WPF.ShiftBits"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shift Bits" Height="120" Width="250" Background="WhiteSmoke" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <WrapPanel Grid.Row="0">
            <TextBlock Margin="10">Number of bits to shift (0 - 7):</TextBlock>
            <TextBox Name="textboxBits" Width="40" Height="25"></TextBox>
        </WrapPanel>
        <StackPanel Grid.Row="1" Margin="10" HorizontalAlignment="Center">
            <Button Name="ok" Padding="30,2,30,2" Click="ok_Click">OK</Button>
        </StackPanel>
    </Grid>
</Window>